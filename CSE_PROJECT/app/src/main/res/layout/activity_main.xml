<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#146918"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_search_limited"
            android:hint="Nhập từ khóa tìm kiếm"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/backgroud_main"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/top_best_sellers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP Bán Chạy Tháng 10/2024"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="10dp"/>

    <HorizontalScrollView
        android:id="@+id/book_list_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/book_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/book_image1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/book3"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/book_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu Em Bằng Mắt..."
                    android:textSize="14sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/book_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140.000 đ"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/book_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/book_image2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/book2"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/book_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lì quá để nói..."
                    android:textSize="14sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/book_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="62.000 đ"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/book_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/book_image3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/book3"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/book_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguồn gốc bệnh ..."
                    android:textSize="14sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/book_price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="199.000 đ"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/new_literature_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sách Văn Học Mới"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="10dp" />

    <HorizontalScrollView
        android:id="@+id/new_books_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/new_book_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/new_book_image1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/book1"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/new_book_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu Em Bằng Mắt..."
                    android:textSize="14sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/new_book_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140.000 đ"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_book_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/new_book_image2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/book2"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/new_book_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lì quá để nói..."
                    android:textSize="14sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/new_book_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="62.000 đ"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_book_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/new_book_image3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/book3"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/new_book_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguồn gốc bệnh dịch..."
                    android:textSize="14sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/new_book_price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="199.000 đ"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#146918"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Trang chủ"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Danh mục"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/shop_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_shop"
            android:contentDescription="Giỏ hàng"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/help_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Hỗ trợ"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</LinearLayout>
