<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <!-- Phần tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Đăng xuất"
            android:src="@drawable/ic_logout" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quản Lý doanh thu"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1" />

    </LinearLayout>



    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/navigation_layout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="#E0E0E0"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút Doanh Thu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/doanhthu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Doanh thu"
                android:src="@drawable/ic_doanh_thu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doanh thu"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <!-- Nút Sản Phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/sanpham"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Trang chủ"
                android:src="@drawable/ic_san_pham" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <!-- Nút Đơn Hàng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/donhang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Đơn hàng"
                android:src="@drawable/ic_don_hang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <!-- Nút Khách Hàng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/khachhang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Khách hàng"
                android:src="@drawable/ic_khach_hang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <!-- Nút Thông Báo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/thongbao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Thông báo"
                android:src="@drawable/ic_thong_bao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
