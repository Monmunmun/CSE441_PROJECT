<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Tên khách hàng -->
        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng: "
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="2dp" />

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="2dp" />

        <!-- Ngày đặt hàng -->
        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt hàng: "
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="2dp" />

        <!-- Trạng thái đơn hàng -->
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang xử lý"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="2dp" />

        <!-- Nơi giao hàng -->
        <TextView
            android:id="@+id/shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nơi giao hàng: "
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="16dp" />
    </LinearLayout>

    <!-- Khung chứa các nút Giao hàng và Xác nhận -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ship_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Giao hàng"
            android:src="@drawable/ic_ship_order" />

        <ImageButton
            android:id="@+id/confirm_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Xác nhận"
            android:src="@drawable/ic_order_cpt" />
    </LinearLayout>
</LinearLayout>
