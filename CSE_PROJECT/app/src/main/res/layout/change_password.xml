<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Quay lại"
            android:src="@drawable/ic_back_page" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thay Đổi Mật Khẩu"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="32dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtOldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:text="Mật khẩu cũ:"
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/edtOldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Nhập mật khẩu cũ..."
            android:textStyle="italic"
            android:background="@drawable/edt_border"/>

        <TextView
            android:id="@+id/txtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:text="Mật khẩu mới:"
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Nhập mật khẩu mới..."
            android:textStyle="italic"
            android:background="@drawable/edt_border" />

        <TextView
            android:id="@+id/txtNewPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:text="Xác nhận mật khẩu mới:"
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/edtNewPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Xác nhận lại mật khẩu mơi..."
            android:textStyle="italic"
            android:background="@drawable/edt_border"/>

        <Button
            android:id="@+id/changePassButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Thay Đổi"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>