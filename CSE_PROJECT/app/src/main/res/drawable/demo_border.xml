<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <solid android:color="#C1C1C1" /> <!-- Shadow color (translucent black) -->
            <corners android:radius="20dp" /> <!-- Same corner radius for shadow -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" /> <!-- Offset to create shadow effect -->
        </shape>
    </item>

    <!-- Main shape layer -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke
                android:width="0dp"
                android:color="#000000" /> <!-- Border color and width -->
            <corners android:radius="20dp" /> <!-- Corner radius for rounded edges -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</layer-list>